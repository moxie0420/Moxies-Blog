---
import { Image } from "astro:assets";

const { image, alt, title, url, body } = Astro.props;
---
<a href={url} class="break-inside-avoid-column">
    <div class="m-3 break-inside-avoid-column bg-milky-50 text-milky-100 border border-milky-100 rounded-lg shadow flex flex-col max-w-2xl">
        <Image src={image} class="rounded-t-lg max-h-2/3" alt={alt} inferSize/>
        <div class="basis-1/3 border-milky-100 border-t p-3 rounded-b-lg">
            <h1 class="font-bold text-5xl mb-5">{title}</h1>
            <p class="text-xl font-serif">{body}</p>
        </div>
    </div>
</a>
