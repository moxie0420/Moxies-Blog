---
import { Image } from "astro:assets";

const { image, alt, title, url, body } = Astro.props;
---

<a href={url} class="break-inside-avoid-column">
  <div
    class="m-3 break-inside-avoid-column bg-milky-50 text-milky-100 border border-milky-100 rounded-lg shadow flex flex-col max-w-2xl"
  >
    <Image
      src={image}
      class="rounded-t-lg"
      alt={alt}
      width={1920 * 0.3}
      height={1080 * 0.3}
      densities={[0.25, 0.5, 0.75, 1.0, 1.25, 1.5, 1.75, 2.0]}
      loading="eager"
      format="webp"
    />
    <div class="basis-1/3 border-milky-100 border-t p-3 rounded-b-lg">
      <h1 class="font-bold text-5xl mb-5">{title}</h1>
      <p class="text-xl font-serif">{body}</p>
    </div>
  </div>
</a>
