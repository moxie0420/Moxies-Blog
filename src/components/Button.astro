---
interface Props {
  href?: string | URL;
  size?: "sm" | "md" | "lg";
}
const { href, size } = Astro.props;

const style = () => {
  switch (size) {
    case "lg":
      return "p-6 rounded-lg text-2xl";
    case "md":
      return "p-4 rounded-lg text-lg";
    case "sm":
      return "p-2 rounded-lg";
    default:
      return "p-2 rounded-lg";
  }
};
---

<a href={href} class="mx-auto">
  <button
    type="button"
    class:list={[
      style(),
      "border-milky-200 border text-milky-100 bg-milky-300 flex gap-2",
    ]}
  >
    <slot name="before" />
    <slot />
    <slot name="after" />
  </button>
</a>
